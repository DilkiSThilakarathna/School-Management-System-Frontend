<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">

        <div class="main-content">
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                 style="height: 100px; background-size: cover; background-position: center top;">

            </div>
            <div class="container-fluid mt--7">
                <div class="row">
                    <form name="uploadAssignment" action="/staff/assignmentsByTeacher" enctype="multipart/form-data" method="POST">
                        <div class="form-group">
                            <h1><b>Upload  & Distribute your Assignment and Home Works</b></h1>
                        </div>
                        <div class="form-group">
                            <label>Upload your Assignment</label>
                            <input type="file" name="myFile" class="form-control" >
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
                <div>
                    <embed src=<%= uploadFilePath %> width="100%" height="375" type="application/pdf">
                </div>
            </div>
        </div>
    </main>
</section>


<%- include('../Includes/staff_end.ejs') %>