<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <!-- Header -->
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                 style="height: 100px; background-size: cover; background-position: center top;">
                <!-- Header container -->
            </div>
            <!-- Page content -->
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0"> student marks details</h3>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="heading-small text-muted mb-4">Enter Student Marks</h6>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <form action="/staff/studentMarks" method="POST">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="testName">Enter the test Name</label>
                                                            <input type="text" id="testName" name="testName"
                                                                   class="form-control form-control-alternative" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="sid">Enter the test ID</label>
                                                            <input type="text" id="tid" name="tid"
                                                                   class="form-control form-control-alternative" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="sid">Enter the test marks</label>
                                                            <input type="text" id="test_mark" name="test_mark"
                                                                   class="form-control form-control-alternative" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="subjectName">Select subject Name</label>
                                                            <select class="form-control" id="subjectName" name="subjectName"
                                                                    required>
                                                                <% for(const subject of subjects) { %>
                                                                    <option><%= subject.name %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group focused">
                                                            <label class="form-control-label"
                                                                   for="student">Select Student</label>
                                                            <select class="form-control" id="student" name="student"
                                                                    required>
                                                                <% for(const student of students) { %>
                                                                    <option><%= student.s_name%></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>

                                                </div>
                                                <button type="submit" class="btn btn-primary btn-block"> Submit Marks</button>

                                            </form>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </main>
</section>

<%- include('../Includes/staff_end.ejs') %>
