<%- include('../Includes/begin.ejs') %>

<%- include('../Includes/student_nav.ejs') %>

<div class="container-fluid">
    <section id="content-wrapper">
        <main role="main" class="pt-5 main">
            <div class="main-content">
                <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                     style="height: 100px; background-size: cover; background-position: center top;">
                </div>
                <div class="container-fluid mt--7">
                    <div class="row">
                        <div class="col-xl-12 order-xl-1">
                            <div class="card bg-secondary shadow">
                                <div class="card-header bg-white border-0">
                                    <div class="row align-items-center">
                                        <form action="/student/timetable" method="POST">
                                            <h6 class="heading-small text-muted mb-4">Select Student</h6>
                                            <div class="pl-lg-4">
                                                <div class="col-lg-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                               for="student">Student</label>
                                                        <select class="form-control" id="student" name="student"
                                                                required>
                                                            <% for(const student of students) { %>
                                                                <option><%= student%></option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <h6 class="heading-small text-muted mb-4">Select Course</h6>
                                            <div class="pl-lg-4">
                                                <div class="col-lg-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                               for="course">Course</label>
                                                        <select class="form-control" id="course" name="course"
                                                                required>
                                                            <% for(const course of courses) { %>
                                                                <option><%= course%></option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <h6 class="heading-small text-muted mb-4">Select Semester</h6>
                                            <div class="pl-lg-4">
                                                <div class="col-lg-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                               for="semester">Semester</label>
                                                        <select class="form-control" id="semester" name="semester"
                                                                required>
                                                            <% for(const semester of classes) { %>
                                                                <option><%= semester%></option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <h6 class="heading-small text-muted mb-4">Select Department</h6>
                                            <div class="pl-lg-4">
                                                <div class="col-lg-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                               for="department">Department</label>
                                                        <select class="form-control" id="department" name="department"
                                                                required>
                                                            <% for(const department of departments) { %>
                                                                <option><%= department%></option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="my-4">
                                            <button type="submit" class="btn btn-primary btn-block">View TimeTable</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </section>
</div>
