<%- include('../Includes/begin.ejs') %>

    <%- include('../Includes/student_nav.ejs') %>


        <section id="content-wrapper">
            <main role="main" class="pt-5 main">
                <%- include('../Includes/messages') %>
                <div class="header pb-4 pb-sm-8 pt-5 pt-lg-4 d-flex align-items-center"
                    style="max-height: 100px; background-size: cover; background-position: center top;">
                    <h1>Hello <%= name %>
                    </h1>
                </div>

                <hr>

                <div class="row">
                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://unihub.mdx.ac.uk/__data/assets/image/0031/527089/MDXapp_my-attendance-mdx-app-red_1x1.jpg"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Attendance</h5>
                                <p class="card-text">View the attendance status for each of your courses. (Make sure
                                    that
                                    the atted. is atleast 75%) </p>

                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a href="/student/selectAttendance" class="btn btn-primary">View Attendance</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://cdn.iconscout.com/icon/premium/png-256-thumb/marks-sheet-1816853-1541534.png"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Marks</h5>
                                <p class="card-text">View the marks obtained for each of your courses. These include
                                    the
                                    marks upto your previous semester.</p>

                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a href="/student/viewMarks" class="btn btn-primary">View Marks</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://www.wikihow.com/images/thumb/5/5f/Make-a-Timetable-Step-3-Version-3.jpg/v4-460px-Make-a-Timetable-Step-3-Version-3.jpg.webp"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Time Table</h5>
                                <p class="card-text">View your timetable. (It shows the time table of all the
                                    courses
                                    you
                                    have registered for!)</p>

                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a href="/student/select_student_timetable" class="btn btn-primary">View Timetable</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://cdn.pixabay.com/photo/2016/01/03/00/43/upload-1118929_960_720.png"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Assignment Upload.</h5>
                                <p class="card-text">Upload your Assignment and Home Works here.</p>
                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a href="/student/uploadAssignment" class="btn btn-primary">Upload your file</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                 src="https://static.wixstatic.com/media/44bf58_3d578c0e9b16460a83eeed355af29663~mv2_d_5469_5469_s_4_2.png/v1/fit/w_1000%2Ch_1000%2Cal_c%2Cq_80/file.png"
                                 alt="image">
                            <div class="card-body">
                                <h5 class="card-title">View My Assignments.</h5>
                                <p class="card-text">Assignments that I have to do.</p>
                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                     style="color: #fff;">
                                    <a href="/student/viewAssignment" class="btn btn-primary">View Assignments</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                 src="https://2o9ub0417chl2lg6m43em6psi2i-wpengine.netdna-ssl.com/wp-content/uploads/2018/10/shutterstock_1115891669-1024x611.jpg"
                                 alt="image">
                            <div class="card-body">
                                <h5 class="card-title">View My Quiz.</h5>
                                <p class="card-text">Quizzes that I have to do.</p>
                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                     style="color: #fff;">
                                    <a href="/student/viewQuiz" class="btn btn-primary">View Quiz</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h1 class="mb-5"> Notices </h1>
                <div class="row">
                    <% for(notice of notices) { %>
                        <div class="col-sm-4 mb-4">
                            <div class="card">
                                <div class="card-header">
                                    <h3><%= notice.title %></h3>
                                </div>
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                        <p>   <%= notice.description %></p>
                                        <footer class="blockquote-footer">By<cite title="Source Title">  <%= notice.added_by %> on <%= notice.added_date%> </cite></footer>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </main>
        </section>

        <%- include('../Includes/student_end.ejs') %>
