<%- include('../Includes/begin.ejs') %>

<%- include('../Includes/student_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <!-- Header -->
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                 style="height: 100px; background-size: cover; background-position: center top;">
                <!-- Header container -->
            </div>
            <!-- Page content -->
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">View Marks</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="heading-small text-muted mb-4">Enter Your Details </h6>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <form action="/student/viewMarks" method="POST">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="test_name">Select Test Name</label>
                                                            <select class="form-control" id="test_name" name="test_name"
                                                                    required>
                                                                <% for(const test of marksData) { %>
                                                                    <option><%= test.test_name %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="course_name">Select Subject Name</label>
                                                            <select class="form-control" id="course_name" name="course_name"
                                                                    required>
                                                                <% for(const test of marksData) { %>
                                                                    <option><%= test.course_name %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="course_name">Select Student Id</label>
                                                            <select class="form-control" id="s_id" name="s_id"
                                                                    required>
                                                                <% for(const test of marksData) { %>
                                                                    <option><%= test.s_id %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>

                                                </div>
                                                <button type="submit" class="btn btn-primary btn-block"> View Marks</button>

                                            </form>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </main>
</section>

<%- include('../Includes/student_end.ejs') %>